@model CarDealership.UI.Models.InventoryReportViewModel
@{
    ViewBag.Title = "Inventory Report";
}


<h2 style="margin-left: .5%">@ViewBag.Title</h2>

    <div class="container-fluid" style="margin-left: -1%">
        <div class="row">
            <div class="col-xs-8 col-sm-8 col-md-5 col-lg-5">
                <h3>New Vehicles</h3>
                <table class="table table-striped" style="border: solid 2px;">
                    <thead>
                        <tr>
                            <th scope="col">Year</th>
                            <th scope="col">Make</th>
                            <th scope="col">Model</th>
                            <th scope="col">Count</th>
                            <th scope="col">Stock Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var New in Model.NewVehicles)
                        {
                        <tr>                           
                            <td>@New.Year</td>
                            <td>@New.Make</td>
                            <td>@New.Model</td>
                            <td>@New.Count</td>
                            @* display as $ with ,'s *@
                            <td>@New.StockValue</td>
                        </tr>

                        }

                    </tbody>
                </table>
                <h3>Used Vehicles</h3>
                <table class="table table-striped" style="border: solid 2px;">
                    <thead>
                        <tr>
                            <th scope="col">Year</th>
                            <th scope="col">Make</th>
                            <th scope="col">Model</th>
                            <th scope="col">Count</th>
                            <th scope="col">Stock Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var New in Model.UsedVehicles)
                        {
                        <tr>
                            <td>@New.Year</td>
                            <td>@New.Make</td>
                            <td>@New.Model</td>
                            <td>@New.Count</td>
                            <td>@New.StockValue</td>
                        </tr>
                        }                         
                        </tbody>
                </table>
            </div>

        </div>
    </div>

