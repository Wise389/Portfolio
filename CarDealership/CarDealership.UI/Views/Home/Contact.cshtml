@model CarDealership.Models.Contact
@{
    ViewBag.Title = "Contact Us";

}
<h2 style="padding-top: 20px">@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>
@using (Html.BeginForm("AddContact", "Home", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-8 col-sm-8 col-md-5 col-lg-4">
                <form style="max-width: 100%; align-content: flex-start" method="post">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name)
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessageFor(o => o.Name)</span>

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email)
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessageFor(o => o.Email)</span>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Phone)
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessageFor(o => o.Phone)</span>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Message)
                        @Html.TextAreaFor(model => model.Message, new { @class = "form-control", rows = "5" })
                        <span class="text-danger">@Html.ValidationMessageFor(o => o.Message)</span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>

            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d96233.52033249191!2d-81.58301709109755!3d41.08434584538899!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x883129d5fe82942b%3A0x8c035de0569db337!2sAkron%20Art%20Museum!5e0!3m2!1sen!2sgl!4v1613612601556!5m2!1sen!2sgl" width="300" height="300" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>                <address>
                    2511 East Ave<br />
                    Akron, OH 44314<br />
                    <br />
                    <span title="Sales">Sales: 330-569-2136</span>
                    <br />
                    <span title="Service">Service: 330-569-2136</span>
                </address>
            </div>
            @*<div class="col-lg-2"></div>*@
        </div>
    </div>
}
