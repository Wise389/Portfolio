@model CarDealership.UI.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";

}

@* Nav bar needs to change for admin access *@

<div class="container-fluid">
    <h2>@ViewBag.Title</h2>
    <h3>@ViewBag.Message</h3>
    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-xs-8 col-sm-8 col-md-5 col-lg-4">
                <div style="max-width: 100%; align-content: flex-start" method="post">
                    @Html.ValidationSummary()
                    @Html.HiddenFor(m => m.UserId)
                    <div class="form-group">
                        <label for="Password">Current Password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="VerifyPassword">New Password</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessage("password")
                    </div>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    }

</div>

