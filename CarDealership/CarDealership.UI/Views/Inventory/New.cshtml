@model List<CarDealership.Models.Vehicle>
@{
    ViewBag.Title = "New Vehicles";
}
<style>
    .line {
        border-bottom: solid 3px;
        margin-bottom: 30px;
        margin-top: 30px;
    }
    .container-fluid{
        width: 100%;
    }
    .container, .container-fluid, .container-sm, .container-md, .container-lg, .container-xl {
        width: 100%;
        padding-right: 0px;
        padding-left: 0px;
        margin-right: auto;
        margin-left: auto;
    }
    /*.h2{
              font-size: 12px;
          }*/
</style>
@* need to match variables possible switch statments *@
<h2 style="padding-top:20px">@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>
<div class="container-fluid" style="border:solid 5px; padding: 20px; width: 100%">
    <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <form style="max-width: 100%; align-content: flex-start">
                <div class="form-group">
                    <label for="SearchKeyword">Quick Search</label>
                    <input type="text" class="form-control" id="searchString" placeholder="Enter make, model, or year">
                </div>
            </form>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <br />
            <div class="form-group">
                <div class="form-inline">
                    <label for="SearchPrice" style="margin-left: 4%; margin-right: 2%;">Price</label>
                    <select class="form-control" id="minPrice" style="justify-content:start; margin-right:7%">
                        <option value="">No Min</option>
                        <option value="1000">1000</option>
                        <option value="5000">5000</option>
                        <option value="10000">10000</option>
                        <option value="15000">15000</option>
                    </select>
                    <select class="form-control" id="maxPrice" style="justify-content:start">
                        <option value="">No Max</option>
                        <option value="1000">1000</option>
                        <option value="5000">5000</option>
                        <option value="10000">10000</option>
                        <option value="15000">15000</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <br />
            <div class="form-group">
                <div class="form-inline">
                    <label for="SearchYear"style="margin-left: 4%; margin-right: 2%;">Year</label>
                    <select class="form-control" id="minYear" style="max-width: 40%; justify-content:start; margin-right: 7%">
                        <option value="">No Min</option>
                        <option value="2000">2000</option>
                        <option value="2005">2005</option>
                        <option value="2010">2010</option>
                        <option value="2015">2015</option>
                        <option value="2020">2020</option>
                    </select>
                    <select class="form-control" id="maxYear" style="max-width: 40%; justify-content:start">
                        <option value="">No Max</option>
                        <option value="2000">2000</option>
                        <option value="2005">2005</option>
                        <option value="2010">2010</option>
                        <option value="2015">2015</option>
                        <option value="2020">2020</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <button type="submit" class="btn btn-primary btn-lg btn-block" style="max-width: 100%; justify-content:center" id="NewSearch">Search</button>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>
    </div>
</div>


<h2>Search Results</h2>
<div class="container-fluid" id="NewVehiclesContainer"></div>

<script>

    let bodyStyles = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Enum.GetNames(typeof(CarDealership.Models.Enumerations.BodyStyle))));
    let transmission = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Enum.GetNames(typeof(CarDealership.Models.Enumerations.Transmission))));
    let color = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Enum.GetNames(typeof(CarDealership.Models.Enumerations.Color))));
    let interior = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Enum.GetNames(typeof(CarDealership.Models.Enumerations.Interior))));

</script>
