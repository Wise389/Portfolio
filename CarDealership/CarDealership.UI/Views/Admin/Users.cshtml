@model List<CarDealership.Models.User>

@{
    ViewBag.Title = "Users";
}
<style>
    .line {
        border-bottom: solid 3px;
        margin-bottom: 30px;
        margin-top: 30px;
    }
    /*.h2{
              font-size: 12px;
          }*/
</style>
<h2 style="padding-top: 20px">@ViewBag.Title</h2>
<div class="link" style="padding-bottom:20px">
    @Html.ActionLink("Add User", "AddUser", "Admin", new { @class = "btn btn-primary btn-sm"})
</div>



<table class="table table-striped" style="border: solid 2px; padding: 20px">
    <thead>
        <tr>
            <th scope="col">Last Name</th>
            <th scope="col">First Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.LastName</td>
            <td>@user.FirstName</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>@Html.ActionLink("Edit User", "EditUser", "Admin", new { id = user.UserId}, new { @class = "btn btn-primary btn-sm" })</td>
        </tr>
        }
    </tbody>
</table>


